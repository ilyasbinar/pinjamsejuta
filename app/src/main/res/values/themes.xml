<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema dasar untuk aplikasi -->
    <style name="Theme.PinjamSejuta" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Tema khusus untuk Splash Screen -->
    <style name="Theme.PinjamSejuta.Splash" parent="Theme.SplashScreen">
        <!-- Latar belakang splash screen -->
        <item name="android:windowBackground">@color/colorPrimary
        </item> <!-- Sesuaikan dengan warna atau gambar latar belakang -->
        <!-- Anda bisa menambahkan lebih banyak item di sini, misalnya logo, transisi, dll. -->
    </style>

    <!-- Tema tanpa ActionBar, digunakan untuk aktivitas lainnya -->
    <style name="Base.Theme.PinjamSejuta" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
    </style>

    <!-- Tema untuk layar penuh -->
    <style name="Theme.PinjamSejuta.Fullscreen" parent="Theme.PinjamSejuta">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">true</item>
    </style>


    <style name="ThemeOverlay.PinjamSejuta.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>